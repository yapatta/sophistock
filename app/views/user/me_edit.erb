<div class='screen edit_screen' style='padding-top: 50px; padding-bottom: 50px;'>
    <%= render '/layouts/header' %>
    <div class='content'>
        <span><%= @current_user.name %></span>
        <span class='mb-3'><%= pluralize(@current_user.posts.count, "post") %></span>
        <div class='nav-bar'>
            <a href="#">
                <div class="nav-item posts">投稿</div>
            </a>
            <a href="#">
                <div class="nav-item profile active">プロフィール</div>
            </a>
            <a href="#">
                <div class="nav-item comment">コメント</div>
            </a>
            <a href="#">
                <div class="nav-item good">いいね</div>
            </a>
        </div>
        <div class="form">
            <h3 class="mt-3 mb-3">プロフィール編集</h3>
            <%= form_with(url: '/users/edit', method: 'patch') do |f| %>
                <%= f.text_area :introduction, value: @current_user.introduction  %>
                <%= f.submit "編集完了", class: "btn mt-1" %>
            <% end %>
        </div>
    </div>
    <%= render '/layouts/footer' %>
</div>