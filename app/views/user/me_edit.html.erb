<div class='screen edit_screen'>
    <% provide :top, "プロフィール" %>
    <%= render '/layouts/header' %>
    <div class='content'>
        <%= render '/layouts/profile-nav2' %>
        <div class="form">
            <h3 class="mt-3 mb-3">プロフィール編集</h3>
            <%= form_with(url: '/users/edit', method: 'patch') do |f| %>
                <%= f.text_area :introduction, value: @current_user.introduction  %>
                <%= f.submit "編集完了", class: "btn mt-1" %>
            <% end %>
        </div>
    </div>
    <%= render '/layouts/footer' %>
</div>