<div class="screen top">
	<div class="picture">
		<%= image_tag("session/top.png", alt: "title") %>
	</div>
	<div class="body">	
		<div class="form">
			<%= form_with(url: '/login', method: 'post') do |f| %>
				<div class="mail-pass">
    				<%= f.email_field :email, placeholder: "メールアドレス" %>
    				<%= f.password_field :password, placeholder: "パスワード" %>
    			</div>
    			<!--仮実装-->
				<div class='auto-container mt-2'>
					<input class='mr-1' type="checkbox" name="auto"/>
					<label for="auto">次回から自動ログイン</label>
				</div>
    			<%= f.submit "ログイン", class: "btn btn-maincolor" %>
			<% end %>
		</div>
		<a class='mt-2' href='#'>パスワードを忘れた場合</a>
	</div>
	<div class="signup-link">
		<a href='/signup'>Sophistockに登録</a>
	</div>
</div>