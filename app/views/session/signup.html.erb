<div class="screen signup">
	<div class="picture">
	</div>
	<div class="body">	
		<div class="form">
		    <%= form_with(url: '/register', method: 'post') do |f| %>
                <div class="information">
                    <%= f.label :ユーザー名 %>
                    <%= f.text_field :name %>
                    <%= f.label :メールアドレス %>
                    <%= f.email_field :email %>
                    <%= f.label :パスワード %>
                    <%= f.password_field :password  %>
                    <%= f.label :パスワード確認 %>
                    <%= f.password_field :password_confirmation %>
                 </div>
                <%= f.submit '登録', class: "btn btn-maincolor mt-3" %>
            <% end %>
		</div>
	</div>
    <div class='login mb-4'>
        <a href='/'>Sophistockにログイン</a>
    </div>
</div>