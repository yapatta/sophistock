<div class="screen signup">
	<div class="picture">
		<%= image_tag("session/top.png", alt: "title") %>
	</div>
	<div class="body">	
        <div class='about'>
            <h2>Sophistckへようこそ</h2>
            <p>
                Sophistockは「誰もが平等に情報発信できる場所」を目指しています。
            </p>
        </div>
		<div class="form">
		    <%= form_with(url: '/register', method: 'post') do |f| %>
                <%= f.label 'ユーザー名' %>
                <%= f.text_field :name %>
                <%= f.label 'Email' %>
                <%= f.email_field :email %>
                <%= f.label 'パスワード' %>
                <%= f.password_field :password %>
                <%= f.label 'パスワード確認' %>
                <%= f.password_field :password_confirmation %>
                <%= f.submit 'アカウント作成', class: "btn btn-minorcolor mt-3" %>
            <% end %>
		</div>
        <div class='login'><a href='/'>Sophistockにログイン</a></div>
	</div>
</div>