<div class='screen timeline-all' style='padding-top: 60px; padding-bottom: 50px;'>
	<%= render '/layouts/header' %>
	<ul class="posts">
  		<% @posts.each do |post| %>
    		<li>
      			<%= link_to post.title, {:controller => "post", :action => "show", :id => post.id} %>
    		</li>
  		<% end %>
	</ul>
	<%= render '/layouts/footer' %>
</div>