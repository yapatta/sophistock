<div class='screen show-edit' style='padding-top: 50px; padding-bottom: 50px;'>
	<%= render '/layouts/header' %>
	<div class="info">
		<%= form_with(url: "/posts/#{@post.id}", method: 'patch') do |f| %>
			<div class="title">
				<%= f.label :title, '記事を編集'%>
				<%= f.text_field :title, value: @post.title %>
			</div>
			<div class="content">
				<%= f.label :content, '内容' %>
				<%= f.text_area :content, value: @post.content %>
			</div>
			<div class="post">
				<%= f.submit "編集完了", class: "btn btn-maincolor" %>
			</div>
		<% end %>
	</div>
	<%= render '/layouts/footer' %>
</div>